	<style name="Amoled" parent="DefaultDark">
		
		<item name="normalTextColor">#bcc1f7</item>
		<item name="normalTextColorNonTinted">#FFFFFF</item>

		<!--Setting the window background color causes real bad UI issues on API19 emulator-->
		<item name="android:windowBackground">#000000</item>


		<item name="cellbackColor">#ff000000</item>
		<item name="cellback">#ff000000</item>
		<item name="cellbackColorDownloadDialog">#ff202020</item>

		<item name="slightestContrastColor">#282828</item>
		<item name="slightContrastColor">#4E4E4E</item>

		<item name="dialog_background">#ff202020</item>
		
		<item name="secondaryColor">#ff202020</item>
		<item name="cellTextColor">#ffE4E4E4</item>
		<item name="cellTextColorSubdued">#ccE4E4E4</item>

		<item name="the_rounded_corner_background_drawable">@drawable/rounded_corner_background_dark_amoled</item>
		<item name="the_rounded_corner_dialog_background_drawable">@drawable/rounded_corner_dialog_background_dark_amoled</item>
		<!--<item name="dialogBackground">#52000000</item>-->
		
		
	</style>


	<style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
		
		<item name="textColorAlertDialogListItem">?attr/cellTextColor</item>
		<item name="android:textColorSecondary">?attr/cellTextColor</item>
		<item name="android:textColorPrimary">?attr/cellTextColor</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">?the_rounded_corner_dialog_background_drawable</item>
	</style>

